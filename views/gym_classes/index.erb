<h1>Classes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Time</th>
    <th>Capacity</th>
    <th>SPACES LEFT</th>
  </tr>
  <% for gym_class in @gym_classes %>
  <tr>
    <td><a href="/gym_classes/<%= gym_class.id %>"><%= gym_class.name %></a></td>
    <td><%= gym_class.time_slot %></td>
    <td><%= gym_class.capacity %></td>
    <td><%= gym_class.capacity - gym_class.members.count %></td>
  </tr>
  <% end %>
</table>

<nav>
    <ul>
