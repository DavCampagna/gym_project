<h1>Bookings</h1>

<table>
  <tr>
    <th>Booking Number</th>
    <th>Member</th>
    <th>Class</th>
    <th>Booking Details</th>
    <th>Delete Booking</th>
  </tr>
  <% for booking in @bookings %>
  <tr>
    <td><%= booking.id %></td>
    <td><%= booking.member.format_name %></td>
    <td><%= booking.gym_class.name %></td>
    <td><a href="/bookings/<%= booking.id %>">View details for this booking</a></td>
    <td><a href="/bookings/<%= booking.id %>">Delete booking</a></td>
  </tr>
  <% end %>
</table>

